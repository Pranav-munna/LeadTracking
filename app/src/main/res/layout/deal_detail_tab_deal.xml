    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Team Members"
            android:textColor="@color/textOrange"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/imgBtnAddContact"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:text="Current Status"
        android:textColor="@color/textOrange"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/oppIDSt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@+id/btnSetChange"
            android:text="opportunity Identification State"
            android:textSize="14dp" />

        <SeekBar
            android:id="@+id/SeekBarId"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@+id/oppIDSt"
            android:layout_toLeftOf="@+id/btnSetChange"
            android:clickable="false"
            android:max="100"
            android:min="0"
            android:progressTint="@color/colorPrimary"
            android:thumb="@color/clr_invisible" />

        <Button
            android:id="@+id/btnSetChange"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:background="@drawable/button_round_orange"
            android:text="Change"
            android:textAllCaps="false"
            android:textColor="@color/textWhite"
            android:textSize="16dp" />

    </RelativeLayout>


