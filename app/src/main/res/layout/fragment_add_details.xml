<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Add Deal"
            android:textColor="@color/textOrange"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edtTxtName"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/background_gray"
            android:layout_marginTop="20dp"
            android:hint="Name"
            android:paddingLeft="5dp"
            android:textColor="@color/textBlack"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnrAccount"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Account"
            android:textColor="@color/textBlack"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnrLead"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="Lead"
            android:textColor="@color/textBlack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtVwStartDate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:text="Est. Start Date"
            android:textColor="@color/textBlack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtVwEndDate"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="5dp"
            android:text="Est. End Date"
            android:textColor="@color/textBlack"
            android:textSize="18sp" />

        <!-- <TextView
             android:id="@+id/txtVwEndDate"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:text="Est. End Date"
             android:textColor="@color/textBlack"
             android:textSize="18sp" />-->

        <Spinner
            android:id="@+id/spnrBilling"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/textBlack"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spnrDeliverable"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/textBlack"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:text="VALUE"
            android:textColor="@color/textHint" />

        <!-- <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="$ 0.00"
             android:paddingLeft="5dp"
             android:textColor="@color/textBlack"
             android:textColorHint="@color/textBlack"
             android:textSize="18sp" />-->

        <faranjit.currency.edittext.CurrencyEditText
            android:id="@+id/edtTxtCurrency"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="start"
            android:background="@color/background_gray"
            android:gravity="center"
            android:hint="0.00"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:textColor="@color/textBlack"
            app:groupDivider=","
            app:locale="en_US"
            app:monetaryDivider="." />

        <Button
            android:id="@+id/btnAddDeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@drawable/button_round_orange"
            android:text="Add Deal"
            android:textColor="@color/textWhite" />

    </LinearLayout>


</ScrollView>