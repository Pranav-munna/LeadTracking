<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_gray"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:layout_marginLeft="?android:attr/actionBarSize"
            android:background="?android:attr/selectableItemBackground" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Network"
            android:textColor="@color/textWhite"
            android:textSize="17dp" />

        <ImageButton
            android:id="@+id/imgBtnAddnetwork"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?android:attr/selectableItemBackground"
            android:padding="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/add_network" />

        <ImageButton
            android:id="@+id/imgBtnFilter"
            android:layout_width="?android:attr/actionBarSize"
            android:layout_height="?android:attr/actionBarSize"
            android:background="?android:attr/selectableItemBackground"
            android:padding="18dp"
            android:scaleType="centerInside"
            android:src="@drawable/mnu_dot" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary">

        <EditText
            android:id="@+id/edtTxtSearch"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_round_white"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="10dp"
            android:hint="Search Network"
            android:inputType="text"
            android:imeOptions="actionSend"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textSize="14dp" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvNetwork"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/background_white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_home"
            android:padding="8dp"
            android:text="Home"
            android:textAllCaps="false"
            android:textSize="8dp" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTint="@color/textBlue"
            android:drawableTop="@drawable/ic_network"
            android:padding="8dp"
            android:text="Network"
            android:textColor="@color/textBlue"
            android:textSize="8dp" />

        <Button
            android:id="@+id/btnDeals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_deals"
            android:padding="8dp"
            android:text="Deals"
            android:textAllCaps="false"
            android:textSize="8dp" />

        <Button
            android:id="@+id/btnScoreBd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_star_score"
            android:padding="8dp"
            android:text="Scoreboard"
            android:textAllCaps="false"
            android:textSize="8dp" />


        <Button
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:drawableTop="@drawable/ic_user"
            android:drawablePadding="2dp"
            android:text="My Profile"
            android:padding="8dp"
            android:textAllCaps="false"
            android:textSize="8dp" />


    </LinearLayout>


</LinearLayout>