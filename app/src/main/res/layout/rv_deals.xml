<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cvDeal"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/background_white">

            <TextView
                android:id="@+id/txtVwNameMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5dp"
                android:text="Deal Details"
                android:textColor="@color/textRed"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/idLead"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVwNameMain"
                android:layout_alignParentStart="true"
                android:text="Lead"
                android:textColor="@color/textHint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtVwName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVwNameMain"
                android:layout_toLeftOf="@+id/btnCall"
                android:layout_toRightOf="@+id/idLead"
                android:maxLines="1"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnCall"
                android:layout_width="42dp"
                android:layout_height="20dp"
                android:layout_below="@+id/txtVwNameMain"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_round_half_left_orange"
                android:text="call"
                android:textAllCaps="false"
                android:textColor="@color/textWhite"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/idAccount"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idLead"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Account"
                android:textColor="@color/textHint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtVwAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idLead"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/idLead"
                android:maxLines="1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/idValue"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idAccount"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:text="Value"
                android:textColor="@color/textHint"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtVwValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idAccount"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/idAccount" />

            <TextView
                android:id="@+id/txtVwPreNego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idValue"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:maxLines="1"
                android:text="Prepration"
                android:textColor="@color/textBlack"
                android:textSize="12dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgVwEdit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_above="@+id/SeekBarId"
                android:layout_alignParentEnd="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="2dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit"
                android:tint="@color/textHint" />

            <SeekBar
                android:id="@+id/SeekBarId"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_below="@+id/txtVwPreNego"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:clickable="false"
                android:max="100"
                android:min="0"
                android:progressTint="@color/colorPrimary"
                android:thumb="@color/clr_invisible" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>